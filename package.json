{
  "name": "@hae-long/vue3-draggable-resizable",
  "version": "2.1.0",
  "private": false,
  "description": "[Vue3 Component] Draggable and resizable with auto-snap alignment and guide lines",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && vue-tsc --declaration --emitDeclarationOnly --outDir dist/types",
    "build:lib": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.vue",
    "typecheck": "vue-tsc --noEmit"
  },
  "main": "./dist/vue3-draggable-resizable.umd.cjs",
  "module": "./dist/vue3-draggable-resizable.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/vue3-draggable-resizable.js",
      "require": "./dist/vue3-draggable-resizable.umd.cjs"
    },
    "./style.css": {
      "import": "./dist/vue3-draggable-resizable.css",
      "require": "./dist/vue3-draggable-resizable.css",
      "default": "./dist/vue3-draggable-resizable.css"
    },
    "./dist/style.css": "./dist/vue3-draggable-resizable.css",
    "./dist/vue3-draggable-resizable.css": "./dist/vue3-draggable-resizable.css"
  },
  "style": "./dist/vue3-draggable-resizable.css",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "dependencies": {},
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "less": "^4.2.1",
    "typescript": "^5.6.3",
    "vite": "^6.0.5",
    "vite-plugin-dts": "^4.3.0",
    "vue": "^3.5.13",
    "vue-tsc": "^2.2.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hae-long/vue3-draggable-resizable.git"
  },
  "bugs": {
    "url": "https://github.com/hae-long/vue3-draggable-resizable/issues"
  },
  "homepage": "https://github.com/hae-long/vue3-draggable-resizable",
  "keywords": [
    "vue3",
    "component",
    "draggable",
    "resizable",
    "drag",
    "snap-alignment"
  ]
}
